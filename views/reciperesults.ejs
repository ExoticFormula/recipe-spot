<section class="pb-4 pt-4 px-3">

    <h2>Search Results</h2>


  <div class="d-flex mb-2 align-items-center">
    <% if(typeof recipeResults!=='undefined' && recipeResults.length>0){ %>
  </div>

  <div
    class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3"
    style="min-height: calc(100vh - 308px)"
  >
   <% recipeResults.forEach(recipe=>{ %>
    <a href="/recipe/<%=recipe._id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img
          src="/uploads/<%= recipe.image %>"
          alt="<%= recipe.name %>"
          loading="lazy"
        />
      </div>
      <div class="pt-1"><%= recipe.name %></div>
    </a>
    <% }) %> <% }else {%>
            <p>No Items Found</p>
    <% } %>
  </div>
</section>
