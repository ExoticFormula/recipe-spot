<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items-center">
    <h2>Categories</h2>
  </div>
  <div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3">
    <% if (categories && categories.length > 0) {%> <%
    categories.forEach((category)=>{ %>
    <a
      href="/categories/<%= category.name %>"
      class="col text-center category__link"
    >
      <div class="category__img shadow">
        <img
          src="img/<%= category.image %>"
          alt="<%= category.name %> Food"
          loading="lazy"
        />
      </div>
      <div class="pt-1"><%= category.name %> Food</div>
    </a>
    <% }) %> <% } %>

    <a href="/categories" class="col text-center category__link">
      <div class="category__img shadow">
        <img src="img/view-all.jpg" alt="View all" loading="lazy" />
      </div>
      <div class="pt-1">View all</div>
    </a>
  </div>
</section>

<section class="pb-4 pt-4">
  <div class="d-flex mb-2 align-items-center">
    <h2>Latest Recipes</h2>
    <a href="/latest" class="ms-auto"> View More </a>
  </div>

  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if(recipetypes.latest && recipetypes.latest.length >0) { %> <%
    recipetypes.latest.forEach(recipe=>{ %>
    <a href="/recipe/<%=recipe._id %>" class="col text-center category__link">
