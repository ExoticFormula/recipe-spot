<head>
  <link rel="stylesheet" href="/css/recipesbycategory.css" />
</head>

<section class="px-4 py-4">
  <% if(typeof categoryById!=='undefined' && categoryById.length >0){ %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/">Categories</a></li>

      <li class="breadcrumb-item active" aria-current="page">
        <%= categoryById[0].category%>
      </li>
    </ol>
  </nav>

  <div class="d-flex mb-2 align-items-center">
    <h2><%= categoryById[0].category%> Food</h2>
  </div>

  <div
    class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3"
    style="min-height: calc(100vh - 308px)"
  >
    <% categoryById.forEach(recipe=>{ %>
    <a href="/recipes/<%=recipe._id %>" class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img
          src="/uploads/<%= recipe.image %>"
          alt="<%= recipe.name %>"
          loading="lazy"
        />
      </div>
      <div class="pt-1"><%= recipe.name %></div>
    </a>
    <% }) %> <% }else {%>
    <h1>No items in this category</h1>
    <% } %>
  </div>
</section>
